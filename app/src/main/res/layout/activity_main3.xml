<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity3">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars[2]"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="128dp"
            android:layout_marginStart="128dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/nombreDesplegado"/>
    <TextView
            android:text="Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nombreDesplegado" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="149dp" android:layout_marginStart="149dp" android:layout_marginBottom="31dp"
            app:layout_constraintBottom_toTopOf="@+id/telefonoDesplegado"/>
    <TextView
            android:text="Telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/telefonoDesplegado" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="145dp" android:layout_marginStart="145dp" android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toTopOf="@+id/correoDesplegado"/>
    <TextView
            android:text="Correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/correoDesplegado" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="157dp" android:layout_marginStart="157dp"
            android:layout_marginBottom="58dp" app:layout_constraintBottom_toTopOf="@+id/buttonBackContact"/>
    <Button
            android:text="Regresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonBackContact" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="148dp" android:layout_marginStart="148dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="68dp"/>
</android.support.constraint.ConstraintLayout>