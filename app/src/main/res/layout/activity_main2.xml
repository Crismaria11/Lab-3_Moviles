<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars[2]"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="128dp"
            android:layout_marginStart="128dp" android:layout_marginBottom="23dp"
            app:layout_constraintBottom_toTopOf="@+id/textName"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Nombre"
            android:ems="10"
            android:id="@+id/textName"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginBottom="41dp"
            app:layout_constraintBottom_toTopOf="@+id/telefono"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Telefono"
            android:ems="10"
            android:id="@+id/telefono"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginBottom="46dp"
            app:layout_constraintBottom_toTopOf="@+id/correo"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Correo electronico"
            android:ems="10"
            android:id="@+id/correo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="15dp" android:layout_marginStart="15dp" android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonBack"/>
    <Button
            android:text="Regresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonBack" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="36dp"/>
    <Button
            android:text="Crear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCreate" android:layout_marginLeft="124dp" android:layout_marginStart="124dp"
            app:layout_constraintStart_toEndOf="@+id/buttonBack" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="36dp"/>
</android.support.constraint.ConstraintLayout>